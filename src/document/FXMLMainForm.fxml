          </Menu>
          <Menu mnemonicParsing="false" text="Tabulate">
            <items>
              <MenuItem mnemonicParsing="false" text="Load" />
                  <MenuItem mnemonicParsing="false" text="Tabulate" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
